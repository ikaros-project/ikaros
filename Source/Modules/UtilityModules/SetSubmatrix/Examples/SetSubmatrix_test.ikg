<?xml version="1.0"?>

<group title="SetSubmatrix Example">
	
		<module
			class = "Ones"
			name = "Source"
			size_x = "4"
			size_y = "4"
		/>
		<module
			class = "Ones"
			name = "Destination"
			size_x = "8"
			size_y = "8"
			value="0.0"
		/>


		<module
			class = "SetSubmatrix"
			name = "SetSubmatrixInstance"
			offset_x  = "2"
			offset_y  = "2"
		/>
		
        <connection sourcemodule = "Source" source = "OUTPUT" targetmodule = "SetSubmatrixInstance" target = "SOURCE" />
        <connection sourcemodule = "Destination" source = "OUTPUT" targetmodule = "SetSubmatrixInstance" target = "DESTINATION" />

		<view name="View">
			<object class="Grid" 
				module="Source" 
				source="OUTPUT" 
				x="0" y="0" w="2" h="2"
				
			/>
			<object class="Grid" 
				module="SetSubmatrixInstance" 
				source="OUTPUT" 
				x="0" y="2" w="2" h="2"
				
			/>
		</view>

</group>
 
