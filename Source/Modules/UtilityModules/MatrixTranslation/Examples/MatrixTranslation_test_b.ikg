<?xml version="1.0"?>

<group title="MatrixTranslation Example">
	
		<module
	        class = "InputJPEG"
	        name = "InputImg"
	        filename = "uppercase00_rz.jpg"
        
        />
        <module
			class = "Constant"
			name = "Trans"
			outputsize  = "1"
			data  = "0"
		/>
		<module
		  class       =   "FunctionGenerator"
		  name        =   "SinGenX"
		  type        =   "sin"
		  frequency  =  "0.005"
		  offset      =   "-3.0"
		  amplitude   =   "0"
		  shift       =   "0.0"
		/>
		<module
		  class       =   "FunctionGenerator"
		  name        =   "SinGenY"
		  type        =   "sin"
		  frequency  =  "0.005"
		  offset      =   "0.0"
		  amplitude   =   "5"
		  shift       =   "0.50"
		/>

		<module
			class = "MatrixTranslation"
			name = "MatrixTranslationInstance"
			debug = "no"
		/>
		
        <connection sourcemodule = "Trans" source = "OUTPUT" targetmodule = "MatrixTranslationInstance" target = "X" />
        <connection sourcemodule = "Trans" source = "OUTPUT" targetmodule = "MatrixTranslationInstance" target = "Y" />
        <connection sourcemodule = "InputImg" source = "INTENSITY" targetmodule = "MatrixTranslationInstance" target = "INPUT" />

		<view name="View">
			<object class="Plot " 
				module="SinGenX" 
				source="OUTPUT" 
				x="0" y="0" w="2" h="2"
				min="-10"
				max="10"
				color="yellow"
			/>
			<object class="Plot " 
				module="SinGenY" 
				source="OUTPUT" 
				x="2" y="0" w="2" h="2"
				min="10"
				max="-10"
				color="green"
			/>
			<object class= "Image" type="gray" module="InputImg" source="INTENSITY"
                x="0" y="2" h="2" w="2" />
            <object class= "Image" type="gray" module="MatrixTranslationInstance" source="OUTPUT"
                x="2" y="2" h="2" w="2" />
         <object
			   class="Slider"
			   title="Sld"
			   module = "Trans"
			   parameter = "data"
			   xindex = "0"
			   x="4" y="0" h="2"
			  min="-5" 
			  max="5"
			/>
		</view>

</group>
 
