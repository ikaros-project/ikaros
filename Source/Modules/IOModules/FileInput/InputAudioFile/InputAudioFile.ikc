<class name="InputAudioFile" description="Copies input">
    <parameter name="filename" type="string" default="inputaudio.wav" description="Filename of audio file; supports wav and aiff" />
    <parameter name="buffer_size" type="int" default="4096" description="Length of output buffer" />
    <parameter name="channels" type="int" default="1" description="Number of audio channels in file, e.g. 2 for stereo files" />
    <parameter name="repeat" type="bool" default="true" description="Whether to repeat playing the file" />
	<output name="OUTPUT" description="The output" size="@channels,@buffer_size"/>
</class>
