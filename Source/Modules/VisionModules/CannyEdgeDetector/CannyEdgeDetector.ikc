<class name="CannyEdgeDetector" description="Canny edge detector for grayscale images">
    <input name="INPUT" description="Grayscale input image (2D matrix)" />
    <output name="OUTPUT" description="Binary edge map (2D matrix)" size="INPUT.size" />
    <parameter name="sigma" type="float" default="1.0" description="Standard deviation for Gaussian blur" />
    <parameter name="low_threshold" type="float" default="0.1" description="Low threshold for edge detection" />
    <parameter name="high_threshold" type="float" default="0.3" description="High threshold for edge detection" />
</class>
