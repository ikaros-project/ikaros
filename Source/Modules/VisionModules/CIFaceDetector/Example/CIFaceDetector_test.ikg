<?xml version="1.0"?>

<!--
	Example file for CoreImage FaceDetector
-->

<group title="Face Detector">

		<module
			class   = "InputVideo"
			name	= "CAMERA"			
			_size_x  = "1280"
			_size_y  = "720"
            size_x  = "640"
            size_y  = "480"
			camera  = "iSight"
            list_devices = "no"
            device_id = "0xfd15000005ac8508"
		/>

        <module
            class = "CIFaceDetector"
            name = "FaceDetector"
            min_size = "0.0"
            use_tracking = "yes"
        />
        
        <connection  source = "CAMERA.INTENSITY"  target = "FaceDetector.INPUT" />
        
		<view name="Input" >
			<object
				class   ="Image"
                title   = "Face"
				type	= "rgb"
				module  = "CAMERA"
				source  = "RED+GREEN+BLUE"
				x="0" y="0"
				w="4" h="3"
				min = "0"
				max = "1"
			/>

             <object
                class   = "Path"
                title   = "Faces"
                module  = "FaceDetector"
                source  = "FACE_BOUNDS"
                length_source = "FACE_COUNT"
                x="0" y="0"
                w="4" h="3"
                min = "0"
                max = "1"
                select = "0"
                count = "4"
                close = "yes"
                color="white"
                line_width="1"
                line_dash="[5,5]"
                fill = "none"
                temp="rgba(255,255,255,0.25)"
                line_join="round"
            />
        
            <object
                class = "Marker"
                module  = "FaceDetector"
                source= "FACE_POSITION"
                angle_source = "ROTATION"
                size_source = "FACE_SIZE"
                length_source = "FACE_COUNT"
                fill = "rgba(0,0,0,0.25)"
                line_width="15"
                color="rgba(128,128,128,0.45)"
                x="0" y="0"
                w="4" h="3"
            />
        
			<_object
                class   = "Circle"
                color = "red"
                size    = "0.025"
                module  = "FaceDetector"
                source  = "EYE_LEFT_POSITION"
                x="0" y="0"
                w="4" h="3"
			/>

			<_object
                class   = "Circle"
                color = "green"
                size    = "0.025"
                module  = "FaceDetector"
                source  = "EYE_RIGHT_POSITION"
                x="0" y="0"
                w="4" h="3"
			/>

			<_object
                class   = "Circle"
                color = "blue"
                size    = "0.03"
                module  = "FaceDetector"
                source  = "MOUTH_POSITION"
                x="0" y="0"
                w="4" h="3"
			/>

            <object
                class = "Plot"
                x="0" y="3"
                module = "FaceDetector"
                source = "ROTATION"
                min = "-25"
                max = "25"
            />

            <object
                class = "Plot"
                x="1" y="3"
                module = "FaceDetector"
                source = "NOVELTY"
            />

             <object
                class = "Plot"
                x="2" y="3"
                module = "FaceDetector"
                source = "SMILE"
            />

             <object
                class = "Plot"
                x="3" y="3"
                module = "FaceDetector"
                source = "BLINK_LEFT"
            />

             <object
                class = "Plot"
                x="4" y="3"
                module = "FaceDetector"
                source = "BLINK_RIGHT"
            />
       </view>

    <module class = "Logger" name = "Logger" />
</group>

