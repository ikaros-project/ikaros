<?xml version="1.0"?>

<group title="CalibrateCameraPosition Test">

    <module
        class   = "InputVideo"
        name	= "Camera"			
        size_x  = "640"
        size_y  = "480"
        list_devices = "no"
    />
    
  	<connection sourcemodule = "Camera"    	source = "INTENSITY" 	targetmodule = "MarkerTracker"  	target="INPUT"   	delay="0"	/>
	
    <module
		class       = "MarkerTracker"
		name        = "MarkerTracker"
		calibration = "640 480 351.87977 249.88640 621.54895 621.65284 -0.13228   -0.02552   0.00099   -0.00169  0.00000 0 10"	
			
		max_markers	= "1"
		sort    	= "no"
        marker_size = "0 57 60; 1000 2000 25"
        use_history = "no"
        threshold 	= "auto"
	/>
	
    <connection sourcemodule="MarkerTracker" source="MARKERS" targetmodule="CalibrateCameraPosition" target="INPUT" />
    
	<module
        class	=	"CalibrateCameraPosition"
        name	=	"CalibrateCameraPosition"
    />
    
   
   <view name="Camera finder">
            <object
            	class   ="Image"
            	title   = "Color RGB"
            	type	= "rgb"
            	module  = "Camera"
            	source  = "RED+GREEN+BLUE"
            	x="0" y="0"
            	w="4" h="3"
            	min = "0"
            	max = "1"
            />
			
			<object
				class   = "Path"
				module  = "MarkerTracker"
				source  = "MARKERS"
                length_source = "MARKER_COUNT"
				x="0" y="0"
				w="4" h="3"
				min = "0"
				max = "1"
                select = "20"
                count = "4"
                close = "yes"  
                color="red"
                stroke_width="7"
                fill = "rgba(255,0,0,0.45)"
                line_join="round"
			/>

             <object
                class   = "Label"
                type    = "value"
                select  = "18"
                select_value = "16"
                decimals = "0"
                offset_x = "0"
                offset_y = "0.01"
                size = "30"
                color = "white"
                module  = "MarkerTracker"
                source  = "MARKERS"
                x="0" y="0"
				w="4" h="3"
				/>

            <object
                class   = "Table"
                module  = "MarkerTracker"
                source  = "MARKER_COUNT"
                title = "No of markers"
                x="0" y="3"
                w="1" h="1"
                font_size = "48"
                decimals = "0"
 			/>
 			  <object
                class   = "Table"
                module  = "MarkerTracker"
                source  = "MARKERS"
                title = "Markers"
                x="0" y="4"
                w="3" h="2"
                font_size = "36"
                decimals = "1"
 			/>
        </view>      
    <module class = "Logger" name = "Logger" />
</group>
