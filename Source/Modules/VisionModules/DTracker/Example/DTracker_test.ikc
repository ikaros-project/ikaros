<?xml version="1.0"?>

<!--
	Example file for the DTracker
-->

<group title="Tracker">

		<module
			class   = "InputVideo"
			name	= "CAMERA"			
			_size_x  = "1280"
			_size_y  = "720"
            size_x  = "320"
            size_y  = "240"
            list_devices = "yes"
            id = "0"
		/>
        <module
            class = "DTracker"
            name = "Tracker"
        />
        
        <connection sourcemodule="CAMERA" source="INTENSITY" targetmodule="Tracker" target="INPUT" />
        
	<view name="Tracker">

	<image
		flipXCanvas = "no"
		flipYAxis = "no"
		max_x = "1"
		scales = "no"
		flipYCanvas = "no"
		module = "Tracker"
		title = "Image"
		y = "0"
		command = "click"
		width = "800"
		source = "CAMERA.RED+GREEN+BLUE"
		format = "rgb"
		x = "0"
		max_y = "1"
		height = "600"
		flipXAxis = "no"
		scale = "both"
		class = "image"
	/>

	<image
		flipXCanvas = "no"
		flipYAxis = "no"
		max_x = "1"
		scales = "no"
		flipYCanvas = "no"
		module = "Tracker"
		title = "Image"
		y = "0"
		command = "click"
		width = "800"
		source = "CAMERA.RED+GREEN+BLUE"
		format = "rgb"
		x = "600"
		max_y = "1"
		height = "600"
		flipXAxis = "no"
		scale = "both"
		class = "image"
	/>

	<path
		max_x = "1"
		scales = "no"
		scale_y = "1"
		x = "600"
		y = "0"
		width = "800"
		lineJoin = "round"
		lineWidth = "3"
		scale_x = "1"
		color = "red, green, blue, yellow"
		max_y = "1"
		height = "600"
		source = "Tracker.TRACKER_BOUNDS"
		flipXCanvas = "no"
		flipYAxis = "no"
		order = "row"
		close = "yes"
		fill = "#ff000088, #00ff0088, #0000ff88, #ffff0088"
		flipYCanvas = "no"
		lineCap = "round"
		flipXAxis = "no"
		arrow = "no"
		class = "path"
	/>

	<marker
		scale_y = "1"
		flipXCanvas = "no"
		flipXAxis = "no"
		max_x = "1"
		scales = "no"
		scale_x = "1"
		labelAlign = "center"
		labelDecimals = "2"
		labelFont = "18px sans-serif"
		labelType = "none"
		order = "col"
		lineWidth = "1"
		x = "600"
		y = "0"
		labelBaseline = "middle"
		max_y = "1"
		flipYCanvas = "no"
		height = "600"
		lineJoin = "miter"
		flipYAxis = "no"
		width = "800"
		markerType = "cross"
		lineCap = "butt"
		module = "Tracker"
		size = "0.1"
		class = "marker"
		source = "TRACKER_POSITION"
		fill = "yellow"
	/>

</view>

    <module class = "Logger" name = "Logger" />
</group>

