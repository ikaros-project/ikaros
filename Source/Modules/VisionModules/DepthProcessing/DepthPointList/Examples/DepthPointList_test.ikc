<?xml version="1.0"?>

<group>
    <module
        class 			= "Constant"
        name 			= "Tilt"
        data            = "0.5"
        outputsize      = "1"
    />

    <module
        class   = "Kinect"
        name	= "Kinect"
        mode    = "mm"
    />
    
    <module
        class   = "DepthPointList"
        name    = "DepthBointList"
    />

    <connection sourcemodule="Tilt" source="OUTPUT" targetmodule="Kinect" target="TILT" />

    <connection sourcemodule="Kinect" source="RED" targetmodule="DepthBlobList" target="RED" />
    <connection sourcemodule="Kinect" source="GREEN" targetmodule="DepthBlobList" target="GREEN" />
    <connection sourcemodule="Kinect" source="BLUE" targetmodule="DepthBlobList" target="BLUE" />
    <connection sourcemodule="Kinect" source="DEPTH" targetmodule="DepthBlobList" target="DEPTH" />
    
    <view name="Depth">
        <object class="Image" type="spectrum" name="Camera" module = "Scale" source = "OUTPUT" x="0" y="0" w="3" h="2" />
        <object class="Image" type="rgb" name="Camera" module = "Kinect" source = "RED+GREEN+BLUE" x="0" y="2" w="3" h="2" />

        <object class="Slider" title="Tilt" module = "Tilt" parameter = "data" x="6" y="3" w="1" h="2" />
    </view>

</group>

