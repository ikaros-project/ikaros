<?xml version="1.0"?>

<class name="Downsample" description="reduce an image to half size">

    <description type="text">
        Downsamples an image to half size.
    </description>

    <input name="INPUT" description="The input image" />
    <output name="OUTPUT" size="INPUT.size_z,INPUT.size_y/2,INPUT.size_x/2" description="The downsampled image" /> 

</class>
