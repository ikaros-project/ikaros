<?xml version="1.0"?>

<group title="EPuck2 Example">
	
		<module
			class = "Constant"
			name = "MyConstant"
			outputsize  = "2"
			data  = "1 2"
		/>
		

		<module
			class = "EPuck2"
			name = "EPuck2Instance"
			
		/>
		
        <_connection source = "MyConstant.OUTPUT" target = "EPuck2Instance.INPUT1" />
        <_connection source = "SquareGen.OUTPUT"  target = "EPuck2Instance.INPUT2" />

		<view name="View">
			<plot 
				source="SquareGen.OUTPUT" 
				
				x="0" y="0" width="100" height="100"
				min="0"
				max="2"
			/>
			<image 
				source="EPuck2Instance.CAMERA_GREY" 
				x="0" y="100" width="100" height="100"
				min="0"
				max="2"
			/>
		</view>

</group>
 
