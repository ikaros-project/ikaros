<?xml version="1.0"?>

<group title="EPuck2 Example">
	
		<module
			class = "Constant"
			name = "MyConstant"
			outputsize  = "2"
			data  = "1 2"
		/>
		<module
		  class       =   "FunctionGenerator"
		  name        =   "SquareGen"
		  type        =   "square"
		  frequency  =  "0.001"
		  offset      =   "0.0"
		  amplitude   =   "1"
		  shift       =   "0.0"
		/>

		<module
			class = "EPuck2"
			name = "EPuck2Instance"
			parameter1  = "1.23"
			parameter2  = "12"
		/>
		
        <connection source = "MyConstant.OUTPUT" target = "EPuck2Instance.INPUT1" />
        <connection source = "SquareGen.OUTPUT"  target = "EPuck2Instance.INPUT2" />

		<view name="View">
			<plot 
				source="SquareGen.OUTPUT" 
				
				x="0" y="0" width="100" height="100"
				min="0"
				max="2"
			/>
			<plot 
				source="EPuck2Instance.OUTPUT" 
				x="0" y="100" width="100" height="100"
				min="0"
				max="2"
			/>
		</view>

</group>
 
