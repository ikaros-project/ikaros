            parameter = "data"
			title="Torque Enable"
            xindex = "0"
            x="0" y="2" w = "1" h="1"
            max="1"
        />
        <object
            class="BarGraph"
            module = "Dynamixel"
            source = "FEEDBACK_LED"
			title="LED"
            x="1" y="0"
            w="1" h="2"
        />
      	<object
            class="Switch"
            title="LED"
            module = "LED"
            parameter = "data"
            xindex = "0"
            x="1" y="2" h="1"
            max="1"
        />
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_D_GAIN"
            title="D Gain"
            x="2" y="0"
            w="1" h="2"
        />
        <object
            class="Slider"
            title="D Gain"
            module = "DGain"
            parameter = "data"
            xindex = "0"
            x="3" y="0" h="2"
            max="1"
        />
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_I_GAIN"
			title="I Gain"
            x="4" y="0"
            w="1" h="2"
        />
        <object
            class="Slider"
            title="I Gain"
            module = "IGain"
            parameter = "data"
            xindex = "0"
            x="5" y="0" h="2"
        />
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_P_GAIN"
			title="P Gain"
            x="6" y="0"
            w="1" h="2"
        />
        <object
            class="Slider"
            title="P Gain"
            module = "PGain"
            parameter = "data"
            xindex = "0"
            x="7" y="0" h="2"
        />
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_GOAL_POSITION"
			title="Goal Position"
            x="8" y="0"
            w="1" h="2"
        />
        <object
            class="Slider"
            title="Goal Position"
            module = "GoalPosition"
            parameter = "data"
            xindex = "0"
            x="9" y="0" h="2"
            max="360"
        />
    	<object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_MOVING_SPEED"
            title="Moving Speed"
            x="10" y="0"
            w="1" h="2"
        />
        <object
            class="Slider"
            title="Moving Speed"
            module = "MovingSpeed"
            parameter = "data"
            xindex = "0"
            x="11" y="0" h="2"
            max="1"
        />  
        
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_TORQUE_LIMIT"
            title="Torque Limit"
            x="12" y="0"
            w="1" h="2"
        />
        
        <object
            class="Slider"
            module = "TorqueLimit"
            parameter = "data"
            title="Torque Limit"
            xindex = "0"
            x="13" y="0" h="2"
            max="1"
        /> 
        
        
        
        
        <object
            class="BarGraph"
            module = "Dynamixel"
            source = "FEEDBACK_PRESENT_POSITION"
            x="0" y="3"
            w="2" h="2"
        />

        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_PRESENT_SPEED"
            x="2" y="3"
            w="2" h="2"
        />
        
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_PRESENT_LOAD"
            x="4" y="3"
            w="2" h="2"
        />
        
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_PRESENT_VOLTAGE"
            x="6" y="3"
            w="2" h="2"
        />        
        
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_PRESENT_TEMPERATURE"
            x="8" y="3"
            w="2" h="2"
        />       
         
        <object
            class="Table"
            module = "Dynamixel"
            source = "FEEDBACK_PRESENT_CURRENT"
            x="10" y="3"
            w="2" h="2"
            max="360"
        />
        <object
            class="Plot"
            module = "GoalPosition"
            source = "OUTPUT"
            x="12" y="3"
            w="2" h="2"
        />
 
    
    </view>
    
    
    
    
    
    <view name="Dynamixel Control" object_size="50" >
        <object
            class="BarGraph"
            title="Desired Positions"
            module = "Positions"
            source = "OUTPUT"
            x="0" y="0"
            w="2" h="2"
            max="360"
        />

        <object
            class="BarGraph"
            title="Actual Positions"
            module = "Dynamixel"
            source = "OUTPUT"
            x="2" y="0"
            w="2" h="2" 
            max="360"
        />

        <object
            class="BarGraph"
            title="Speed"
            module = "Speed"
            source = "OUTPUT"
            x="4" y="0"
            w="2" h="2" 
            max="1"
        />

        <object
            class="Slider"
            title="Pos"
            module = "Positions"
            parameter = "data"
            select = "0"
            x="0" y="4" h="3"
            max="360"
        />

         <object
            class="Slider"
            title="Pos Speed"
            module = "Dynamixel"
            parameter = "position_speed"
            xindex = "0"
            x="1" y="4" h="3"
            max="1"
        />

        <object
            class="Slider"
            title="Torque"
            module = "Torque"
            parameter = "data"
            xindex = "0"
            x="2" y="4" h="3"
            max="1"
        />
                
        <object
            class="Slider"
            title="Speed"
            module = "Speed"
            parameter = "data"
            xindex = "0"
            x="3" y="4" h="3"
            max="1"
        />

        <object
            class="Plot"
            title="Load"
            module = "Dynamixel"
            source = "LOAD"
            x="0" y="2"
            w="2" h="2"
            min="-1"
            max="1"
        />
        <object
            class="BarGraph"
            title="Voltage (V)"
            module = "Dynamixel"
            source = "VOLTAGE"
            x="2" y="2"
            w="2" h="2" 
            max="20"
        />

        <object
            class="BarGraph"
            title="Temperature (Â°C)"
            module = "Dynamixel"
            source = "TEMPERATURE"
            x="4" y="2"
            w="2" h="2" 
            max="100"
        />

        <object
            class="Text"
            text="The first three sliders control the position, speed and torque of a servo in position control mode while the last slider controls the speed of a servo in continuous (wheel) mode."
            x="4" y="4"
            w="4" h="2"
        />

    </view>
</group>
 
